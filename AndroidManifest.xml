        <activity
            android:name="edu.dartmouth.cs.dartcard.PayActivity"
            android:label="@string/title_activity_pay"
            android:parentActivityName="edu.dartmouth.cs.dartcard.RecipientActivity" >
        </activity>
        <activity
            android:name="edu.dartmouth.cs.dartcard.FromActivity"
            android:label="@string/title_activity_from"
            android:parentActivityName="edu.dartmouth.cs.dartcard.HomeActivity" >
