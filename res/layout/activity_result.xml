<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ResultActivity" >

    <TextView
        android:id="@+id/ui_activity_result_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ui_activity_result_header_text" />

    <TextView
        android:id="@+id/ui_activity_result_urls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ui_activity_result_header"
        android:layout_below="@+id/ui_activity_result_header"
        android:layout_marginTop="25dp"
        android:autoLink="web"/>

     <Button
         android:id="@+id/ui_activity_result_button"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/ui_activity_result_urls"
         android:layout_alignParentBottom="true"
         android:layout_marginBottom="104dp"
         android:onClick="onSendAnotherClicked"
         android:text="@string/button_title_send_another" />
    
</RelativeLayout>